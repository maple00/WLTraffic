<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shap_radio_white_5dp">

    <!-- 卡片Item-->
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/shap_radio_orange"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:gravity="end"
            android:layout_marginEnd="15dp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        style="@style/HorizontalLineStyle"/>

    <com.rainwood.tools.widget.MeasureListView
        android:id="@+id/lv_content"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="30dp"
        android:listSelector="@android:color/transparent"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/ll_show_or_hide"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_show_or_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开"
            android:textColor="@color/colorLabel"
            android:textSize="11sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/iv_show_or_hide"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_icon_after"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

</LinearLayout>